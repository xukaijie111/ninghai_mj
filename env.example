# 环境配置示例文件
# 复制此文件为 .env.production 并填入真实配置

# 应用配置
NODE_ENV=production
PORT=3001
CLIENT_URL=https://your-domain.com

# 数据库配置
MONGODB_URI=mongodb://mongodb:27017/ninghai_mj
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_strong_mongodb_password_here

# Redis配置
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_strong_redis_password_here

# JWT配置
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=7d

# 微信小游戏配置
WECHAT_APP_ID=your_wechat_mini_game_app_id
WECHAT_APP_SECRET=your_wechat_mini_game_app_secret

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 安全配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 游戏配置
MAX_ROOMS=1000
MAX_PLAYERS_PER_ROOM=4
GAME_TIMEOUT_MS=300000
